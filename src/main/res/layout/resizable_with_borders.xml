<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/left_view"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/top_view"
        android:src="@drawable/caroline_2"
        android:layout_width="100dp"
        android:layout_height="match_parent" />
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/right_view"
        android:layout_below="@+id/top_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/caroline_2"
        android:layout_width="100dp"
        android:layout_height="match_parent" />
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/top_view"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="-8dp"
        android:src="@drawable/caroline_2"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
    <me.cgarrido.tools.ResizableImageView
        android:layout_below="@+id/top_view"
        android:layout_toLeftOf="@+id/right_view"
        android:layout_toStartOf="@+id/right_view"
        android:layout_toRightOf="@+id/left_view"
        android:layout_toEndOf="@+id/left_view"
        android:id="@+id/resizable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>